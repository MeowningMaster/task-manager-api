{
    "name": "task-manager-api",
    "description": "Simple task manager API",
    "version": "1.0.0",
    "type": "module",
    "imports": {
        "#root/*": "./dist/*"
    },
    "scripts": {
        "build": "tsc",
        "launch": "node dist/main.js",
        "start": "run-s build launch",
        "format": "prettier --write src/**/*.ts",
        "test": "vitest run",
        "launch-migrate": "pnpm drizzle-kit generate:mysql",
        "migrate": "run-s build launch-migrate"
    },
    "dependencies": {
        "@fastify/swagger": "^8.8.0",
        "@fastify/swagger-ui": "^1.9.2",
        "@fastify/type-provider-typebox": "^3.3.0",
        "@paralleldrive/cuid2": "^2.2.1",
        "@sinclair/typebox": "^0.29.6",
        "@types/bcryptjs": "^2.4.2",
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "drizzle-orm": "^0.27.2",
        "fastify": "^4.20.0",
        "fastify-plugin": "^4.5.1",
        "fastify-qs": "^4.0.2",
        "mysql2": "^3.5.2",
        "pino": "^8.14.1",
        "pino-pretty": "^10.1.0",
        "yaml": "^2.3.1"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "drizzle-kit": "^0.19.10",
        "jsonwebtoken": "^9.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.0",
        "typescript": "^5.1.6",
        "vitest": "^0.33.0"
    }
}
