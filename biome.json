{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"javascript": {
		"formatter": {
			"trailingComma": "all",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"ignore": ["package.json", "node_modules/**/*", "dist/**/*"]
	}
}
